' Artifact
skinparam artifact {
    BackgroundColor #F0FFF0
    BorderColor #b5beeb
    BorderThickness 2
    FontColor #0b2e1d
}

' Swimlane
skinparam swimlane {
    BorderColor #294f3d
    BorderThickness 2
    TitleFontColor #0b2e1d
}

' Activity
skinparam activity {
    BackgroundColor #F0FFF0
    BorderColor #4dd191
    BorderThickness 2
    FontColor #0b2e1d
    DiamondBackgroundColor #FFFFF5
    DiamondBorderColor #e3c764
    DiamondFontColor #0b2e1d
    StartColor #4dd191
    EndColor #f48771
    BarColor #294f3d
}

' Кружки начала/завершения
skinparam activityStart {
    Color #4dd191
}

skinparam activityEnd {
    Color #f48771
}

' CRITICAL: stop элементы
skinparam ActivityEndColor #f48771
skinparam ActivityStopColor #f48771

' Actor (для sequence диаграмм)
skinparam actor {
    BackgroundColor #F0FFF0
    BorderColor #4dd191
    BorderThickness 2
    FontColor #0b2e1d
}

' Class (базовые настройки для классов без стереотипов)
skinparam class {
    BackgroundColor #F0FFF0
    BorderColor #294f3d
    BorderThickness 2
    FontColor #0b2e1d
    ArrowColor #294f3d
}

' Component (базовые настройки для компонентов без стереотипов)
skinparam component {
    BackgroundColor #F0FFF0
    BorderColor #294f3d
    BorderThickness 2
    FontColor #0b2e1d
}
